{
  "manifest_version": 3,
  "name": "Fake News Detector",
  "version": "1.0.0",
  "description": "On-device AI fact-checking: credibility scores, red flags, claim highlighting. Powered by Chrome Built-in AI (Gemini Nano).",
  "minimum_chrome_version": "138",
  "action": { "default_title": "Open AI Assistant" },
  "side_panel": {
    "default_path": "src/sidepanel/panel.html"
  },
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "permissions": ["activeTab", "storage", "sidePanel", "scripting", "contextMenus"],
  "icons": {
    "16": "src/assets/icons/16.png",
    "32": "src/assets/icons/32.png",
    "128": "src/assets/icons/128.png"
  },
  "content_scripts": [{
    "matches": [
      "<all_urls>",
      "https://mail.google.com/*",
      "https://outlook.live.com/*"
    ],
    "js": [
      "src/shared/logger-content.js",
      "src/content/content.js"
    ],
    "css": ["src/content/overlay.css"],
    "run_at": "document_idle"
  }],
  "web_accessible_resources": [{
    "resources": [
      "src/assistant-panel/panel.html",
      "src/assistant-panel/panel.css",
      "src/assistant-panel/panel.js"
    ],
    "matches": ["<all_urls>"]
  }]
}
