{
  "name": "fake-news-detector",
  "version": "1.0.0",
  "description": "On-device AI fact-checking powered by Chrome Built-in AI",
  "type": "module",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage"
  },
  "keywords": [
    "chrome-extension",
    "ai",
    "fact-checking",
    "gemini-nano"
  ],
  "author": "Yury Gagarin",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {},
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/background/background.js",
      "!src/content/content.js",
      "!src/sidepanel/panel.js",
      "!src/popup/popup.js",
      "!src/offscreen/offscreen.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 25,
        "functions": 9,
        "lines": 15,
        "statements": 15
      }
    }
  }
}
